<h1 class="hero-title text-center"> INDEX listings </h1>
<section class="container">
    <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4">
      <%@listings.each do |listing|%>
        <div class="col mb-4">
          <div class="card border-dark h-100">
            <%= image_tag("placeholder.png", class:"thumbnail card-img top", alt: "keyboard")%>
            <div class="card-body">
              <h5><%=listing.title%></h5>
              <p class="card-text text-secondary"><%=listing.description%></p>
               <div class='d-flex justify-content-between'>
                <h5><%=format_price(listing.price)%></h5>
                  <%=link_to "See More", listing_path(listing.id), class: "btn btn-outline-primary"%></div>
    </div>
        </div>  
          </div>
         
      <%end%>
      </div>
  </section>