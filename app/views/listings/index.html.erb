<h1 class="hero-title text-center mb-5"> Listings </h1>

<section class="container">
    <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4">
      <%@listings.each do |listing|%>
        <div class="col mb-4">
          <div class="card h-100">
                  <%if listing.picture.attached?%>
                      <%=image_tag listing.picture, alt: listing.title, class:"thumbnain card-img top"%>
                  <%else%>
                      <%=image_tag "placeholder.png", alt: "placeholder image", class:"thumbnain card-img top"%>
                  <%end%>
            
            <div class="card-body">
              <h5><%=listing.title%></h5>
              <p class="card-text text-secondary"><%=listing.description%></p>
               <div class='d-flex justify-content-between'>
                <h5><%=format_price(listing.price)%></h5>
                  <%=link_to "See More", listing_path(listing.id), class: "btn btn-outline-primary"%></div>
    </div>
        </div>  
          </div>
         
      <%end%>
      </div>
  </section>